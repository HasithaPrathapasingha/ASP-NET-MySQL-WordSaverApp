@model IEnumerable<WordSaverApp.Models.WordEntry>

@{
    ViewData["Title"] = "All Submitted Words";
}

<h2>All Submitted Words</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Word</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Word</td>
                <td>@item.Description</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
